{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
    <div class="block-header">
        <h2>{{ 'page.titles.product'|trans }}</h2>
    </div>
    <div class="row clearfix">
        <div class="col-sm-12">
            <div class="card">
                <div class="header">
                    <h2>{{ product.name }}</h2>
                    <ul class="header-dropdown m-r--5">
                        <li>
                            <a href="{{ path('product_edit', {'id': product.id}) }}" title="Editar">
                                <i class="material-icons">edit</i>
                            </a>
                        </li>
                        <li>
                            <a href="#"
                               type="button"
                               onclick="remove()"
                               class="text-danger"
                               title="Eliminar">
                                <i class="material-icons">delete</i>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <table class="table table-condensed">
                        <tbody>
                        <tr>
                            <th class="col-xs-6">Nombre</th>
                            <td>{{ product.name }}</td>
                        </tr>
                        <tr>
                            <th>Cantidad Base</th>
                            <td>{{ product.amount }}</td>
                        </tr>
                        <tr>
                            <th>Unidad Base</th>
                            <td>{{ product.unit }}</td>
                        </tr>
                        <tr>
                            <th>Observaciones</th>
                            <td>{{ product.notes }}</td>
                        </tr>
                        </tbody>
                    </table>
                    <div class="center">
                        <p style="font-size: 18px" class="text-center">
                            Cada <b>{{ product.name }}</b> equivale/contiene <br>
                            <b>{{ product.amount }}</b> <b>{{ product.unit }}</b> siguiendo la relación de que <br>
                            cada <b>{{ product.formula.amount }}</b>  <b>{{ product.unit }}</b> de <b>{{ product.formula.name }}</b> equivale/contiene
                        </p>
                    </div>
                    {% set base = product.amount / product.formula.amount %}
                    <h2 class="card-inside-title">Detalles</h2>
                    <div class="table-responsive">
                        <table class="table table-bordered table-condensed">
                            <thead>
                            <tr>
                                <th>Materia Prima</th>
                                <th>Cantidad</th>
                                <th>Cantidad para 1 producto</th>
                                <th>Unidad</th>
                                <th>Costo</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for detail in product.details %}
                                <tr>
                                    <td>{{ detail.material.name }}</td>
                                    <td>{{ detail.amount }}</td>
                                    <td>{{ detail.amount * base }}</td>
                                    <td>{{ detail.unit }}</td>
                                    <td>{{ detail.total|currency(0) }}</td>
                                </tr>
                            {% endfor %}
                                <tr>
                                    <td class="text-center" colspan="3"><b>Total</b></td>
                                    <td>{{ product.price|currency(0) }}</td>
                                </tr>
                            </tbody>
                        </table>
                        <h2 class="card-inside-title">Balance de Movimientos</h2>
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Tipo de Movimiento</th>
                                <th>Cambio</th>
                                <th>Responsable</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for history in histories %}
                                <tr>
                                    <td>{{ history.date|date('d-m-Y') }}</td>
                                    <td>{{ history.action }}</td>
                                    <td>{{ history.amount }}</td>
                                    <td>{{ history.username }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="8">{{ 'page.no_records'|trans }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
{% block javascripts %}
    <script>
        function remove() {
            swal({
                title: "Estas Seguro?",
                text: "Tú no podras revertir esta acción!",
                icon: "warning",
                dangerMode: true,
                buttons: {
                    cancel: true,
                    confirm: true,
                },
            }).then(willDelete => {
                if (willDelete) {
                    document.getElementById('frmDelete').submit();
                }
            });
        }
    </script>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}{{ 'page.titles.product'|trans }}{% endblock %}

{% block body %}
    <div class="block-header">
        <h2>{{ 'page.titles.product'|trans }}</h2>
    </div>
    <div class="row clearfix" ng-controller="saleProduct as vm">
        <div class="col-sm-12">
            <div class="card">
                <div class="header">
                    <h2>Venta</h2>
                </div>
                <div class="body">
                    <div class="row clearfix">
                        <div class="col-md-6">
                            {% include 'shared/_search.htmt.twig' %}
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-condensed">
                            <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>CÃ³digo</th>
                                <th>Cantidad Actual</th>
                                <th>Cantidad Vendida</th>
                                <th>Cantidad Final</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr ng-repeat="x in vm.selected | filter: {name: vm.q}">
                                <td ng-bind="x.name"></td>
                                <td ng-bind="x.code"></td>                                
                                <td ng-bind="x.stock"></td>
                                <td>
                                    <input title="ajuste"
                                            type="number"
                                            class="form-control"
                                            ng-model="x.change">
                                </td>
                                <td ng-bind="x.stock - x.change"></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <button class="btn btn-primary" ng-click="vm.save()">Guardar</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('build/product/sale.js') }}"></script>
{% endblock %}
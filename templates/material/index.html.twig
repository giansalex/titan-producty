{% extends 'base.html.twig' %}

{% block title %}{{ 'page.titles.material'|trans }}{% endblock %}

{% block body %}
    <div class="block-header">
        <h2>{{ 'page.titles.material'|trans }}</h2>
    </div>
    <div class="row clearfix">
        <div class="col-sm-12">
            <div class="card">
                <div class="header">
                    <h2>Lista</h2>
                    <ul class="header-dropdown m-r--5">
                        <li>
                            <a href="{{ path('material_new') }}" class="btn btn-success">Nueva Materia Prima</a>
                        </li>
                        <li>
                            <a href="{{ path('material_inventory') }}" class="btn btn-info">Ajustar Inventario</a>
                        </li>
                    </ul>
                </div>
                <div class="body table-responsive">
                    <div class="row clearfix">
                        <div class="col-md-6">
                            {% include 'shared/_search.htmt.twig' with {url: path('material_index')} only %}
                        </div>
                    </div>
                    <table class="table">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Nombre</th>
                            <th>CÃ³digo</th>
                            <th>Cantidad</th>
                            <th>Unidad</th>
                            <th>Costo Unitario</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for material in materials %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ material.name }}</td>
                                <td>{{ material.code }}</td>
                                <td>{{ material.amount }}</td>
                                <td>{{ material.unit }}</td>
                                <td>{{ material.price }}</td>
                                <td>
                                    <a href="{{ path('material_show', {'id': material.id}) }}"
                                       class="waves-effect">
                                        <i class="material-icons">visibility</i>
                                    </a>
                                    <a href="{{ path('material_edit', {'id': material.id}) }}"
                                       class="waves-effect">
                                        <i class="material-icons">edit</i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">No fueron encontrados registros</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}{{ formula.name }}{% endblock %}

{% block body %}
    <div class="block-header">
        <h2>{{ 'page.titles.formula'|trans }}</h2>
    </div>
    <div class="row clearfix">
        <div class="col-sm-12">
            <div class="card">
                <div class="header">
                    <h2>{{ formula.name }}</h2>
                    <ul class="header-dropdown m-r--5">
                        <li>
                            <a href="{{ path('formula_edit', {'id': formula.id}) }}" title="Editar">
                                <i class="material-icons">edit</i>
                            </a>
                        </li>
                        <li>
                            <a href="#"
                               type="button"
                               onclick="remove()"
                               class="text-danger"
                               title="Eliminar">
                                <i class="material-icons">delete</i>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <table class="table table-condensed">
                        <tbody>
                        <tr>
                            <th class="col-xs-6">Nombre</th>
                            <td>{{ formula.name }}</td>
                        </tr>
                        <tr>
                            <th>Cantidad Base</th>
                            <td>{{ formula.amount }}</td>
                        </tr>
                        <tr>
                            <th>Unidad Base</th>
                            <td>{{ formula.unit }}</td>
                        </tr>
                        <tr>
                            <th>Observaciones</th>
                            <td>{{ formula.notes }}</td>
                        </tr>
                        </tbody>
                    </table>
                    <h2 class="card-inside-title">Detalles</h2>
                    <div>
                        <p>
                            Cada <b>{{ formula.amount }}</b> <b>{{ formula.unit }}</b> de <b>{{ formula.name }}</b> equivale a
                        </p>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-condensed">
                            <thead>
                            <tr>
                                <th>Materia Prima</th>
                                <th>Cantidad</th>
                                <th>Unidad</th>
                                <th>Costo</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for detail in formula.details %}
                                <tr>
                                    <td>{{ detail.material.name }}</td>
                                    <td>{{ detail.amount }}</td>
                                    <td>{{ detail.material.unit }}</td>
                                    <td>{{ (detail.amount * detail.price)|currency(0) }}</td>
                                </tr>
                            {% endfor %}
                                <tr>
                                    <td class="text-center" colspan="3"><b>Total</b></td>
                                    <td>{{ formula.price|currency(0) }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ include('formula/_delete_form.html.twig') }}
{% endblock %}
{% block javascripts %}
    <script>
        function remove() {
            swal({
                title: "Estas Seguro?",
                text: "Tú no podras revertir esta acción!",
                icon: "warning",
                dangerMode: true,
                buttons: {
                    cancel: true,
                    confirm: true,
                },
            }).then(willDelete => {
                if (willDelete) {
                    document.getElementById('frmDelete').submit();
                }
            });
        }
    </script>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Nueva Producci처n{% endblock %}

{% block body %}
    <div class="block-header">
        <h2>{{ 'page.titles.production'|trans }}</h2>
    </div>
    <div class="row clearfix" ng-controller="newProduction as vm" ng-init="vm.production.state = '01'">
        <div class="col-sm-12">
            <div class="card">
                <div class="header">
                    <h2>Crear Nueva Producci처n</h2>
                </div>
                <div class="body">
                    <form name="vm.frm" ng-submit="vm.create()">
                        <div>
                            <label for="code">N첫mero de Orden</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text"
                                           id="code"
                                           ng-model="vm.production.code"
                                           class="form-control">
                                </div>
                            </div>
                            <label for="product">Producto</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <select id="product"
                                            required
                                            class="form-control"
                                            ng-model="vm.production.product_id"
                                            ng-change="vm.changeproduct()">
                                        <option></option>
                                        <option ng-repeat="p in vm.products"
                                                ng-bind="p.name"
                                                ng-value="p.id"></option>
                                    </select>
                                </div>
                            </div>
                            <label for="client">Cliente</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text"
                                           id="client"
                                           required
                                           ng-model="vm.production.client"
                                           class="form-control">
                                </div>
                            </div>
                            <label for="amount">Total de productos</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text"
                                           id="amount"
                                           required
                                           ng-model="vm.production.amount"
                                           class="form-control">
                                </div>
                            </div>
                            <label for="weight">Cantidad a producir</label>
                            <div class="input-group">
                                <div class="form-line">
                                    <input type="text"
                                           id="weight"
                                           required
                                           ng-model="vm.production.weight"
                                           class="form-control">
                                </div>
                                <span class="input-group-addon" ng-bind="vm.product.unit"></span>
                            </div>
                            <label>Costo Unitario</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <p ng-bind="vm.product.price|currency:'$':0"></p>
                                </div>
                            </div>
                            <label>Costo Total</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <p ng-bind="vm.getTotal()|currency:'$':0"></p>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="table-responsive">
                            <table class="table table-bordered table-condensed">
                                <thead>
                                <tr>
                                    <th>Materia Prima</th>
                                    <th>Cantidad</th>
                                    <th>Unidad</th>
                                    <th>Precio</th>
                                    <th>Total</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr ng-repeat="x in vm.selected">
                                    <td ng-bind="x.name"></td>
                                    <td ng-bind="x.amount"></td>
                                    <td ng-bind="x.unit"></td>
                                    <td ng-bind="x.price|currency"></td>
                                    <td ng-bind="x.total|currency"></td>
                                </tr>
                                <tr>
                                    <td class="text-center" colspan="4"><b>Total</b></td>
                                    <td ng-bind="vm.getTotal()|currency:'$':0"></td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        <br>
                        <button class="btn btn-primary" ng-disabled="vm.frm.$invalid">Crear Producci처n</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('build/production/new.js') }}"></script>
{% endblock %}